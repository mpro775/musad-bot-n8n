# تمكين قاعدة البيانات (Postgres فقط)
DATABASE_ENABLED=true
DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI=postgresql://evo:secret@postgres:5432/evo_db

# لا نحتاج RabbitMQ ولا SQS اليوم
RABBITMQ_ENABLED=false
SQS_ENABLED=false
WEBSOCKET_ENABLED=false

# احتفظ بالجلسات داخلياً في Redis (كاش وليس DB)
CACHE_REDIS_ENABLED=true
CACHE_REDIS_URI=redis://redis:6379/1
CACHE_REDIS_PREFIX_KEY=evo_cache

# احتفظ بالنسخ فقط (لتجاوز migrations الثقيلة)
DATABASE_SAVE_DATA_INSTANCE=false
DATABASE_SAVE_DATA_NEW_MESSAGE=false
DATABASE_SAVE_MESSAGE_UPDATE=false
DATABASE_SAVE_DATA_CONTACTS=false
DATABASE_SAVE_DATA_CHATS=false

# مفتاح المصادقة لخدمة Evo
AUTHENTICATION_API_KEY=my-secret-key

# Webhook: شغّل فقط أحداث الرسائل ليتم توجيهها
WEBHOOK_GLOBAL_ENABLED=false
WEBHOOK_EVENTS_MESSAGES_UPSERT=true
WEBHOOK_EVENTS_MESSAGES_SET=true
WEBHOOK_EVENTS_SEND_MESSAGE=true

# عنوان الـ n8n الذي سيستقبل Webhook الرسائل
WEBHOOK_GLOBAL_URL=https://n8n.smartagency-ye.com/webhook/evolution
